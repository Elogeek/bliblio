{% extends '/base.html.twig' %}

{% block title %}
    Hello welcome in the page, livre : {{ book.name}} .
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="books">
        <h1>Nom du livre : {{ book.name }}</h1>
        <h2>Catégorie : {{ book.category.name }}</h2>
        <h3>Etagère : {{ book.category.shelf.id }}</h3>
        <p>Auteur : {{ book.author }}</p>
        <p>Disponibilité : {{ book.available }}</p>
        <p>Description : {{book.shortDescription  }}</p>
    </div>

{% endblock %}

